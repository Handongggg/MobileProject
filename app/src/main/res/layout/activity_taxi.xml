<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints" />
    <view class="android.support.v7.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_height="610dp">

    </view>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <ImageView
            android:paddingTop="10dp"
            android:layout_margin="10dp"
            android:id="@+id/list_taxi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/taxi"/>
        <LinearLayout
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/list_taxi"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:fontFamily="@font/dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="제목:"
                android:textSize="15dp" />

            <EditText
                android:fontFamily="@font/dong"
                android:id="@+id/edit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textAlignment="textEnd"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/list_taxi"
            android:layout_below="@+id/linear0"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:fontFamily="@font/dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="출발지:"
                android:textSize="15dp" />

            <EditText
                android:fontFamily="@font/dong"
                android:id="@+id/edit_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textAlignment="textEnd"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/list_taxi"
            android:layout_below="@id/linear1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:fontFamily="@font/dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="목적지:"
                android:textSize="15dp" />

            <EditText
                android:fontFamily="@font/dong"
                android:id="@+id/edit_dest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textAlignment="textEnd"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/list_taxi"
            android:layout_below="@id/linear2"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:fontFamily="@font/dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="시간:"
                android:textSize="15dp" />

            <EditText
                android:fontFamily="@font/dong"
                android:id="@+id/edit_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textAlignment="textStart"
                android:textSize="15dp" />
            <TextView
                android:fontFamily="@font/dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="인원:"
                android:textSize="15dp" />

            <EditText
                android:fontFamily="@font/dong"
                android:id="@+id/edit_personnel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textAlignment="textStart"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:fontFamily="@font/dong"
        android:id="@+id/btn_posting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        android:layout_margin="10dp"
        android:textSize="20dp"/>


</android.support.constraint.ConstraintLayout>